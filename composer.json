{
  "name": "rutube/wordpress",
  "keywords": [
    "rutube",
    "plugin",
    "wordpress"
  ],
  "description": "Official Rutube plugin for WordPress",
  "type": "wordpress-plugin",
  "authors": [
    {
      "name": "Rutube Team"
    }
  ],
  "license": "Apache 2.0",
  "require": {
    "php": ">=5.3.3",
    "rutube/php-api-client": "1.0.*"
  },
  "require-dev": {
    "phpunit/phpunit": "4.5.*",
    "brianium/paratest": "0.12.*"
  },
  "autoload": {
    "psr-4": {"Rutube\\": "src/"}
  },
  "scripts": {
    "test": "vendor/bin/paratest -f tests/ --colors",
    "coverage-html": "vendor/bin/paratest -f tests/ --coverage-html ./coverage --colors"
  }
}
